# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /api                        controllers.ApiDocController.api


#Functions for Default API
GET     /mc/game/version_manifest                     controllers.DefaultApiController.mcGameVersionManifestGet(request: Request)
GET     /v1/packages/:packageId/:versionId.json                     controllers.DefaultApiController.v1PackagesPackageIdVersionIdJsonGet(request: Request, packageId: String, versionId: String)

# Map static resources from the /public folder to the /assets URL path
GET /assets/*file           controllers.Assets.at(file)
GET /versionedAssets/*file  controllers.Assets.versioned(file)